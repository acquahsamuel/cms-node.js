<h2> Create Categories </h2>

<div class="row">
    <div class="col-sm-4">
        <form action="/admin/categories/create" method="post">
            <div class="form-group">
                <label for=""> Add Category </label>
                <input type="text" name="name" id="" class="form-control" placeholder="" aria-describedby="helpId">
                <small id="categories" class="text-muted">Add category title here </small>
            </div>

            <button type="submit" name="" id="" class="btn btn-primary"> Create Category  </button>
        </form>
    </div>

    <div class="col-sm-8">
    <table class="table table table-striped table-inverse">
         <label for=""> All  Category </label>
        <thead class="thead-inverse">
             
            <tr>
                <th>Id </th>
                <th>Name </th>
                <th>Date </th>
                <th>Edit  </th>
                <th>Delete  </th>
                
             </tr>
            </thead>
            <tbody>
              {{#each categories}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{name}}</td>
                    <td>{{generateDate date 'MMMM Do YYYY' }}</td>
                    <td><a class="btn btn-dark btn-sm" href="/admin/categories/edit/{{_id}}"><i class="fa fa-edit"></i> Edit </a> </td>
                    <td> 
                        <form action="/admin/categories/{{_id}}?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Delete </button>
                        </form>
                    </td>
                </tr>
                {{/each}}

            </tbody>
    </table>
     </div>
</div>


