<h1> All post </h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id </th>
            <th> Image </th>
            <th>Title </th>
            <th> Status </th>
            <th> Allow Comments </th>
            <th> Edit </th>
            <th> Delete </th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td> {{_id}}</td>
            <td><img height="40px" class="img-responsive" src="/uploads/{{file}}"> </td>
            <td> {{title}} </td>
            <td> {{status}} </td>
            <td> {{allowComments}} </td>
            <td> <a href="/admin/posts/edit/{{_id}}" class="btn btn-info btn-sm"> Edit </a></td>
            <td> 
                <form action="/admin/posts/{{_id}}?_method=DELETE" method="post">
                 <button type="submit" class="btn btn-danger btn-sm"> Delete </button>
                 </form>
            </td>
            
        </tr>
        {{/each}}
    </tbody>
</table>

